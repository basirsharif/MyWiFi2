<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Background -->
    <ImageView
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/header_background"
        android:alpha="0.8"/>

    <LinearLayout
        android:layout_width="@dimen/nav_header_info_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/nav_header_horizontal_spacing"
        android:layout_marginRight="@dimen/nav_header_horizontal_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <!-- Icon -->
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="@dimen/nav_header_icon_width"
            android:layout_height="@dimen/nav_header_icon_height"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom"
            android:src="@mipmap/ic_launcher" />

        <!-- Title -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Description -->
        <TextView
            android:id="@+id/header_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>